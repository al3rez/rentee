<div class="my-5 flex flex-col gap-3" data-controller="image-preview">
  <div id="photo-preview" class="flex gap-3 overflow-x-auto no-scrollbar" data-image-preview-target="preview" class="mt-3">
    <div class="flex items-center justify-center w-[200px] h-[152px] bg-white border-[2px] border-gray-400 border-dashed outline-none rounded-xl">
      <img src="<%= image_url("img-preview.svg") %>"/>
    </div>
    <div class="flex items-center justify-center w-[200px] h-[152px] bg-white border-[2px] border-gray-400 border-dashed outline-none rounded-xl">
      <img src="<%= image_url("img-preview.svg") %>"/>
    </div>
  </div>
  <div class="flex">
    <%= form.label :photos, "Upload image", class: "bg-black text-white cursor-pointer py-3 px-5 rounded-full font-bold" %>
    <%= form.file_field :photos, multiple: true, data: { action: "change->image-preview#previewImages", image_preview_target: "input" }, class: "hidden" %>
  </div>
</div>
<div class="my-5 pt-10">
  <%= form.label :title, class:"font-bold" %>
  <%= form.text_field :title, placeholder: "Max 40 char", class: "block py-4 rounded-lg border-none outline-none px-3 py-2 mt-2 w-full py-4 placeholder:text-gray-400" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :description, class:"font-bold" %>
  <%= form.text_area :description, placeholder: "Write description to showcase your item", rows: 4, class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 pt-5 pb-10 px-5" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :category_id, class:"font-bold"  %>
  <%= form.select :category_id, Category.all.collect { |c| [c.name, c.id] }, { prompt: 'Category' }, class: "block font-bold rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :postcode, class: "font-bold" %>
  <%= form.text_field :postcode, placeholder: "Post code", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :price_per_day, class: "font-bold" %>
  <%= form.text_field :price_per_day, placeholder: "Price", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :price_per_month, class: "font-bold" %>
  <%= form.text_field :price_per_month, placeholder: "Price", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full py-4 placeholder:text-gray-400" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :price_per_week, class: "font-bold" %>
  <%= form.text_field :price_per_week, placeholder: "Price", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" %>
</div>
<div class="my-5 pt-5">
  <%= form.label :item_value, class: "font-bold" %>
  <%= form.text_field :item_value, placeholder: "Price", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" do %>
    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="20" cy="20" r="20" fill="black"/>
    </svg>
  <%  end %>
</div>
<div class="my-5 pt-5">
  <%= form.label :min_rental_days, class: "font-bold" %>
  <%= form.number_field :min_rental_days, placeholder: "0", class: "px-5 block rounded-lg border-none outline-none px-3 py-2 mt-2 w-full placeholder:text-gray-400 py-4" %>
</div>
