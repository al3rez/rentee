<div class="flex flex-col bg-sunshine w-full px-4 items-start rounded-b-xl" data-controller="profile">
  <div class="flex justify-between items-center w-full pb-20">
    <div class="flex">
      <h1 class="font-semibold text-2xl">My profile</h1>
    </div>
    <div class="flex cursor-pointer" data-action="click->profile#toggleMenu">
      <%= render "icons/edit" %>
    </div>
    <div class="absolute right-7 top-14 hidden shadow-lg rounded-xl" data-profile-target="menu">
      <div class="bg-white p-4 rounded-xl">
        <ul>
          <%= link_to edit_user_path(current_user) do %>
            <li class="cursor-pointer">Edit account</li>
          <% end %>
          <li class="cursor-pointer">Change password</li>
          <%= link_to logout_url do %>
            <li class="text-lipstick">Logout</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="flex relative">
  <div class="absolute left-0 bottom-[-2rem] px-4">
    <% if current_user.avatar.persisted? %>
      <%= image_tag(current_user.avatar, class: "rounded-full border-4 border-black") %>
    <% else %>
      <%= image_tag("https://i.pravatar.cc/100", class: "rounded-full border-4 border-black") %>
    <% end %>
  </div>
</div>
<div class="px-4 flex flex-col pt-10">
  <div class="flex justify-between">
    <div class="flex flex-col">
      <span class="text-xl font-semibold"><%= current_user.name %></span>
      <span class="text-md text-gray-400"><%= current_user.location %></span>
    </div>
    <div class="flex flex-col items-end">
      <div class="bg-white flex gap-0.5 px-1 py-1 rounded-md">
        <img loading="lazy" src="https://cdn.builder.io/api/v1/image/assets/TEMP/16cb00564292162b23464b786e513b1fc523bc5faefca5325328fdb7a13148ef?" class="aspect-square object-contain object-center w-3.5 overflow-hidden shrink-0 max-w-full">
        <div class="text-zinc-400 text-sm leading-4 self-stretch whitespace-nowrap">
          4.4
        </div>
      </div>
      <span class="text-md text-gray-400">(15 reviews)</span>
    </div>
  </div>
  <span class="py-5 text-md"><%= current_user.bio %></span>
</div>
